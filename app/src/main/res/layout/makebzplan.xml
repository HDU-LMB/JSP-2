<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="-1dp"
    android:background="@drawable/toolbox_boder">

    <RelativeLayout
        android:id="@+id/parent_TopLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_margin="-1dp"
        android:padding="0dp"
        android:background="@drawable/toolbox_boder">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:id="@+id/currentJZJName"
            android:textColor="@color/colorTextBlack"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"

            android:textSize="12sp"
            android:layout_margin="0dp" />
        <TextView
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:id="@+id/currentZWName"
            android:textColor="@color/colorTextBlack"
            android:textAlignment="center"
            android:layout_alignParentRight="true"

            android:textSize="12sp"
            android:layout_margin="0dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="-1dp"
            android:orientation="horizontal"
            android:background="@drawable/toolbox_boder"
            android:layout_toRightOf="@id/currentJZJName"
            android:layout_toLeftOf="@id/currentZWName">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:id="@+id/selectStationName"
                android:textAlignment="center"
                android:text="选择ZW:"
                android:textSize="12sp"
                android:layout_margin="0dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ListView
                    android:id="@+id/staionTotalListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></ListView>
                <!--<Spinner-->
                    <!--android:id="@+id/zwStationSpinner"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:gravity="center_horizontal"></Spinner>-->

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/parent_BottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="-1dp"
        android:background="@drawable/toolbox_boder">

        <Button
            android:id="@+id/saveBZItem"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="保存"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="9sp"
            android:padding="0dp"
            android:layout_margin="0dp"/>
        <Button
            android:id="@+id/cancelBZItem"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="关闭"
            android:layout_toLeftOf="@id/saveBZItem"
            android:textSize="9sp"
            android:padding="0dp"
            android:layout_margin="0dp"/>
        <Button
            android:id="@+id/deleteBZItem"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/cancelBZItem"
            android:text="删除"
            android:textSize="9sp"
            android:padding="0dp"
            android:layout_margin="0dp"/>
        <TextView
            android:id="@+id/addBZItem"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/deleteBZItem"
            android:text="添加"
            android:textSize="12sp"
            android:padding="0dp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:background="@drawable/label_graycolorstyle"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/parent_MiddleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/parent_TopLayout"
        android:layout_above="@id/parent_BottomLayout"
        android:layout_margin="-1dp"
        android:padding="0dp"
        android:background="@drawable/toolbox_boder">

        <LinearLayout
            android:id="@+id/left_ParentMiddleLayout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:background="@drawable/toolbox_boder">

            <TextView
                android:id="@+id/gasLabel"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="油"
                android:textSize="12sp"
                android:padding="0dp"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/label_gascolorstyle" />

            <TextView
                android:id="@+id/fluidLabel"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="液"
                android:textSize="12sp"
                android:padding="0dp"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/label_fluidcolorstyle"/>

            <TextView
                android:id="@+id/cooLabel"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="冷"
                android:textSize="12sp"
                android:padding="0dp"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/label_coolcolorstyle"/>

            <TextView
                android:id="@+id/airLabel"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="气"
                android:textSize="12sp"
                android:padding="0dp"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/label_aircolorstyle"/>

            <TextView
                android:id="@+id/weaponLabel"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="弹"
                android:textSize="12sp"
                android:padding="0dp"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/label_weaponcolorstyle"/>

            <TextView
                android:id="@+id/oxygenLabel"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:padding="0dp"
                android:text="氧"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/label_oxygencolorstyle"/>

            <TextView
                android:id="@+id/electricityLabel"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="电"
                android:textSize="12sp"
                android:padding="0dp"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/label_electriccolorstyle"/>

            <TextView
                android:id="@+id/guidLabel"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="导"
                android:textSize="12sp"
                android:padding="0dp"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/label_guidcolorstyle"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_ParentMiddleLayout"
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:background="@drawable/toolbox_boder">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/zwNameListView">

            </ListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/middle_ParentMiddleLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/right_ParentMiddleLayout"
            android:layout_toRightOf="@id/left_ParentMiddleLayout">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ALabel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
