                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="C"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/DLabel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="D"/>
                <TextView
                    android:id="@+id/ELabel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="E"/>
                <TextView
                    android:id="@+id/FLabel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="F"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/GLabel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="G"/>
                <TextView
                    android:id="@+id/HLabel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="H"/>
                <TextView
                    android:id="@+id/ILabel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="I"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/number1Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="1"/>
                <TextView
                    android:id="@+id/number2Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="2"/>
                <TextView
                    android:id="@+id/number3Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/number4Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="4"/>
                <TextView
                    android:id="@+id/number5Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="5"/>
                <TextView
                    android:id="@+id/number6Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/number7Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="7"/>
                <TextView
                    android:id="@+id/number8Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="8"/>
                <TextView
                    android:id="@+id/number9Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="9"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/number0Label"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="0"/>
