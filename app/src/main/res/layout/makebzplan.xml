                    android:text="add"/>
                <TextView
                    android:id="@+id/numberdeleteLabel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/label_boderstyle"
                    android:textAlignment="center"
                    android:text="delete"/>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>